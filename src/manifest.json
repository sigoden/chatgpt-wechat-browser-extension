{
  "name": "ChatGPT For Wechat FileHelper",
  "description": "Turn wechat filehelper into a chatgpt-powered chatbot",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["tabs"],
  "host_permissions": [
    "https://*.openai.com/",
    "https://filehelper.weixin.qq.com/",
    "https://filehelper.weixin.qq.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://filehelper.weixin.qq.com/*", "https://szfilehelper.weixin.qq.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
